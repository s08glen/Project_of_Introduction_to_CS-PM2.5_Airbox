<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pmimage"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />


    <Button
        android:id="@+id/btn_paired"
        android:layout_width="130dp"
        android:layout_height="40dp"


        android:layout_above="@+id/DATE"
        android:layout_gravity="center"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_toLeftOf="@+id/btn_conn"
        android:layout_toStartOf="@+id/btn_conn"
        android:background="@android:color/transparent"
        android:text="配對藍牙設備"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="配對藍牙設備" />

    <Button
        android:id="@+id/btn_conn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_above="@+id/DATE"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@android:color/transparent"
        android:text="搜尋藍牙設備"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="搜尋藍牙設備" />

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/pmimage"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/pmimage"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:shadowColor="#F0FFFF"
        android:textColor="@android:color/black"
        android:textSize="75sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DangerText"
        android:layout_width="100dp"
        android:layout_height="66dp"
        android:layout_alignBottom="@+id/Show_B_List"
        android:layout_alignLeft="@+id/btn_paired"
        android:layout_alignStart="@+id/btn_paired"
        android:layout_marginBottom="78dp"
        android:gravity="center"
        android:textColor="#008B8B"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DATE"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/Show_B_List"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_above="@+id/btn_paired"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />


</RelativeLayout>